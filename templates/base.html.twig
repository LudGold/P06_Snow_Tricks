<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}

			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

			<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

			<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
			<link rel="stylesheet" href="{{ asset('styles/app.css') }}">
			<link rel="icon" href="{{ asset('favicon/favicon.ico') }}" type="image/x-icon"/>
			<link rel="manifest" href="{{ asset('site.webmanifest') }}">
		{% endblock %}
	</head>
	<body>
		{% block menu %}
			<!-- Menu principal pour les versions bureau -->
			{% include 'home/menu.html.twig' %}
			<!-- Menu mobile pour les appareils mobiles -->
			{% include 'home/menu_mobile.html.twig' %}
		{% endblock %}

		<div class="container mt-5 main-content">
			<div id="my-flash-message-block">
				{% for label, messages in app.flashes(['success', 'warning', 'error']) %}
					{% for message in messages %}
						<div class="alert alert-{{ label }} align-content-center alert-dismissible fade show" role="alert">
							{{ message }}
							<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
						</div>
					{% endfor %}
				{% endfor %}
			</div>
			{% block body %}{% endblock %}

		</div>

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}

			{% endblock %}

			<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
		{% endblock %}
	</body>
</html>
