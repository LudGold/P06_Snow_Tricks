{# templates/homepage.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container">
        <div id="banner" class="jumbotron jumbotron-fluid homepage-banner">
            <div class="container text-center">
                <h1 class="display-4">La page de référence des figures de snow</h1>
            </div>
            <div class="scroll-down-arrow">
                <i id="scroll-down" class="fas fa-chevron-down"></i>
            </div>
        </div>
    </div>

    <div class="row" id="figures-container">
        {% include 'figure/_figures.html.twig' with {'figures': figures|slice(0, 15)} %}
    </div>

    {% if figures|length > 15 %}
        <div class="d-flex justify-content-center mt-4">
            <button id="load-more-btn" class="btn btn-primary mt-4">Voir plus de figures</button>
			
         <button id="scroll-up"  class="btn btn-secondary mt-4">
            <i class="fas fa-chevron-up"></i> 
        </button> 
    {% endif %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/scroll.js')}}"></script>
    <script src="{{ asset('js/figures.js')}}"></script>
{% endblock %}



