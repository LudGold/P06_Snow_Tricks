{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <h1 class="h3 mb-3 font-weight-normal">Mot de passe oublié</h1>

    {% if successMessage is defined %}
        <div class="alert alert-success">{{ successMessage }}</div>
    {% endif %}

    {% if errorMessage is defined %}
        <div class="alert alert-danger">{{ errorMessage }}</div>
    {% endif %}

    <form method="post" action="{{ path('app_forgot_password') }}">
        <label for="email">Email</label>
        <input type="email" name="email" id="email" class="form-control" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('forgot_password') }}">

        <button class="btn btn-lg btn-primary" type="submit">Envoyer le lien de réinitialisation</button>
    </form>

    <p class="mt-3">
        <a href="{{ path('app_login') }}">Retour à la page de connexion</a>
    </p>
{% endblock %}
